<%= render 'layouts/flash_messages' %>
<%= form_for(book) do |f| %>
	<div class="field row">
		<%= f.label :title %>
		<%= f.text_field :title, class: "book_title" %>
	</div>

	<div class="field row">
		<%= f.label :body %> <!-- ここを変更 -->
		<%= f.text_area :body, class: "book_body" %>
	</div>

	<div class="actions row">
		<%= f.submit class: "btn btn-primary" %>
	</div>

<% end %>
